<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mercari.activity.ProductDisplayActivity">

    <include layout="@layout/layout_title"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/mercari_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_default_height"
        android:background="@color/appBackground"
        app:tabIndicatorColor="@color/tabIndicatorColor"
        app:tabTextColor="@color/tabTextColor"
        app:tabSelectedTextColor="@color/tabTextSelectColor"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tabTextColor">
    </View>

    <android.support.v4.view.ViewPager
        android:id="@+id/mercari_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vpBackground"/>

</LinearLayout>
